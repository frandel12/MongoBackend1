@{
    ViewData["Title"] = "Update User";
}
@foreach (var item in @ViewBag.UserList)
{
    <form asp-action="updateUser" asp-controller="Home" method="POST">
        <div class="mb-3">
            <label for="txtname" class="form-label">Name</label>
            <input type="text" class="form-control" name="txtname" required value="@item.name">
        </div>
        <div class="mb-3">
            <label for="txtemail" class="form-label">Email</label>
            <input type="text" class="form-control" name="txtemail" required value="@item.email">
        </div>
        <div class="mb-3">
            <label for="txtphone" class="form-label">Phone</label>
            <input type="text" class="form-control" name="txtphone" required value="@item.phone">
        </div>
        <div class="mb-3">
            <label for="txtaddress" class="form-label">Address</label>
            <input type="text" class="form-control" name="txtaddress" required value="@item.address">
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
    </form>
}
