@{
    ViewData["Title"] = "Insert User";
}
<div class="container">
    <form class="form" asp-controller="Home" asp-action="insertUser" enctype="multipart/form-data">
        <div class="text-center">
            <h4>Create User</h4>
            <hr>
        </div>
        <div class="col-lg-4 col-md-12 col-sm-12">
            <label for="txtname" class="form-label">Nombre</label>
            <input type="text" class="form-control form-control-sm mb-2" name="txtname" required />
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12">
            <label for="txtemail" class="form-label">Email</label>
            <input type="text" class="form-control form-control-sm mb-2" name="txtemail" required />
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12">
            <label for="txtphone" class="form-label">Phone</label>
            <input type="text" class="form-control form-control-sm mb-2" name="txtphone" />
        </div>
        <div class="col-lg-4 col-md-6 col-sm-12">
            <label for="txtaddress" class="form-label">Address</label>
            <input type="text" class="form-control form-control-sm mb-2" name="txtaddress" required />
        </div>
        <br>
        <div class="form-group float-end">
            <div class="col-12">
                <button class="btn btn-success" type="submit">Guardar</button>
            </div>
        </div>
    </form>
</div>
